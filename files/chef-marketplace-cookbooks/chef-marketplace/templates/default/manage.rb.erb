chef_documentation_url '<%= node['chef-marketplace']['documentation']['url'] %>'
disable_sign_up <%= node['chef-marketplace']['manage']['sign_up']['enabled'] ? 'false' : 'true' %>
org_creation_enabled <%= node['chef-marketplace']['manage']['org_creation']['enabled'].to_s %>
public_port <%= node['chef-marketplace']['manage']['ssl_port'] %>
support_email_address '<%= node['chef-marketplace']['support']['email'] %>'
