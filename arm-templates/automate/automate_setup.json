{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiVersions": {
      "type": "object",
      "metadata": {
        "description": "ARM resource API versions"
      }
    },
    "automateLicenseUri": {
      "type": "string",
      "metadata": {
        "description": "Location of the users license file"
      },
      "defaultValue": ""
    },
    "baseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL for nested templates and scripts"
      },
      "defaultValue": "https://raw.githubusercontent.com/chef-partners/omnibus-marketplace/master/arm-templates/automate"
    },
    "fqdn": {
      "type": "string",
      "metadata": {
        "description": "FQDN of the chef server, this is used to display the URL to use to access the server"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Azure location for the resource"
      }
    },
    "providerGuid": {
      "type": "string",
      "metadata": {
        "description": "The provider GUID"
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "The virtual machine name"
      }
    }
  },
  "variables": {
    "scriptUrl": "[concat(parameters('baseUrl'), '/automate_setup.rb')]",
    "rubyPath": "/opt/chef-marketplace/embedded/bin/ruby",
    "setupCommand": "[concat(variables('rubyPath'), ' ./automate_setup.rb --fqdn ', parameters('fqdn'), ' --license ', parameters('automateLicenseUri'))]",
    "automateLoginURL": "[concat('https://', parameters('fqdn'), '/biscotti/setup')]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/automate_setup')]",
      "apiVersion": "[parameters('apiVersions').virtualMachineExtensions]",
      "location": "[parameters('location')]",
      "tags": {
        "project": "Chef Automate",
        "provider": "[parameters('providerGuid')]"
      },
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": ["[variables('scriptUrl')]"],
          "commandToExecute": "[variables('setupCommand')]"
        }
      }
    }
  ],
  "outputs": {
    "automateLoginURL": {
      "type": "string",
      "value": "[variables('automateLoginURL')]"
    }
  }
}
