{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiVersions": {
      "type": "object",
      "metadata": {
        "description": "ARM resource API versions"
      }
    },
    "location": {
      "type": "string"
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "Description": "The name of the new storage account created to store the VMs disks"
      }
    },
    "storageAccountType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Premium_LRS"
      ],
      "metadata": {
        "Description": "The type of the Storage Account created"
      },
      "defaultValue": "Standard_LRS"
    },
    "storageAccountResourceGroup": {
      "type": "string",
      "metadata": {
        "Description": "The Resource Group for the new storage account"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageAccountName')]",
      "apiVersion": "[parameters('apiVersions').storageAccounts]",
      "tags": {
        "project": "Chef Automate",
        "provider": "[toUpper('33194f91-eb5f-4110-827a-e95f640a9e46')]"
      },
      "location": "[parameters('location')]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    }
  ],
  "outputs": {
    "storageAccountResourceGroup": {
      "type": "string",
      "value": "[resourceGroup().name]"
    }
  }
}
